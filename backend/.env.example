# ========================================
# 标签打印系统 - 环境变量配置
# ========================================
# 复制此文件为 .env 并修改相应配置
# ========================================

# 应用配置
APP_NAME="标签打印系统"
APP_VERSION="1.0.0"
API_V1_STR="/api/v1"

# 服务器配置
HOST="0.0.0.0"
PORT=8000
RELOAD=true

# 数据库配置
# 格式：postgresql://用户名:密码@主机:端口/数据库名
DATABASE_URL="postgresql://label_user:your_strong_password@localhost:5432/label_system"

# BarTender配置
BARTENDER_EXE="C:\\Program Files\\Seagull\\BarTender Suite\\bartend.exe"
TEMPLATES_DIR="D:\\Projects\\LabelSystem\\backend\\app\\templates"
OUTPUT_DIR="D:\\server_print_output"

# 安全配置
# 生成强密钥：openssl rand -hex 32
SECRET_KEY="your-strong-secret-key-here-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS配置（前端开发服务器地址）
BACKEND_CORS_ORIGINS=["http://localhost:5173", "http://localhost:8080"]

# Redis配置
REDIS_URL="redis://localhost:6379"

# 日志配置
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"

# 开发/测试模式
DEBUG=true
ENVIRONMENT="development"
